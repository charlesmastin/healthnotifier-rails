<%= fields_for @invoice do |f| %>

<article>
    <div class="title">
        <h3>Basics</h3>
    </div>

    <div class="content">
        <div class="field">
            <%= f.label :title, required: true %>
            <%= f.text_field :title, :placeholder => 'Public name, something easily identifiable', required: true %>
        </div>
        <div class="field">
            <%= f.label :description, required: false %>
            <%= f.text_area :description, :placeholder => 'Extended details, shows on invoice and receipt', required: false, rows: 6 %>
        </div>
        <div class="field">
            <%= f.label :organization, required: true %>
            <%= f.select :organization_id, Organization.all.collect { |p| [ p.name, p.id ] }, include_blank: true, required: true %>
        </div>
        <div class="field">
            <%= f.label :amount, required: true %>
            <%= f.number_field :amount %>
            <small class="meta">In USD cents (100 = $1.00)</small>
        </div>
        <div class="field">
            <%= f.label :due_date %>
            <%= f.date_field :due_date %>
            <div><small>Not enforced, but a nice thing to add.</small></div>
        </div>
        <div class="field">
            <%= f.label :notes, required: false %>
            <%= f.text_area :notes, :placeholder => 'Internal notes for Lifesquareâ€¦', required: false %>
        </div>
    </div>
</article>


<% end %>