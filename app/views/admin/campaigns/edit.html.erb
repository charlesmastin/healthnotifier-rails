<section class="page-title">
    <h1><a href="<%= admin_campaign_index_path %>" data-balloon="View All Campaigns" class="baby-got-back"><i class="material-icons">arrow_back</i></a>Edit Campaign <%= @campaign.campaign_id %></h1>
</section>

<%= render :partial => 'admin/sidebar' %>

<section id="main-column">

<form id="object-form" action="<%= admin_campaign_update_path(@campaign.id) %>" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<section class="pillbox auth-form">
    <%= render :partial => 'admin/campaigns/form' %>
</section>
<section class="flow-control left">
    <button id="red-button-do-not-touch-it" type="submit" class="button primary">Submit</button>
    <a href="<%= admin_campaign_index_path %>" class="button">Cancel</a>
</section>
</form>

</section>



<% if false %>
<h1>Scan for  Lifesquare Sheet Requests</h1>
<%= form_tag( :controller => "code_sheet_print_request", :action => 'generate' ) do %>
<%= submit_tag( "Scan for new sheet requests" ) %>
<% end  %>

<% end %>

<% content_for :js_bootstrap do %>
    <script>
        (function () {
            "use strict";
            $('#campaign_name').focus();

            $('button[type="submit"]').click(function(e){
                // some mccheesy basic validation up in this bizzle
                $('#object-form').get(0).submit();
            });
        })();
    </script>
<% end %>