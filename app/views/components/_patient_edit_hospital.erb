<script id="hospital-item" type="text/html">
    <div class="row">
        <div class="field span4 required">
            <label for="hospital-name-{{record_order}}">Name</label>
            <input class="span4" type="text" name="name" value="{{name}}" id="hospital-name-{{record_order}}">
            <p class="error-message" data-for="hospital-name-{{record_order}}">Please enter a hospital name</p>
        </div>
        <div class="field span3">
            <label for="hospital-phone-{{record_order}}">Phone Number</label>
            <input class="span3" type="phone" name="phone" value="{{phone}}" id="hospital-phone-{{record_order}}">
            <p class="error-message" data-for="hospital-phone-{{record_order}}">Please enter a valid phone number</p>
        </div>
        <%= render :partial => 'components/remove_row_button' %>
    </div>

    <div class="row">
        <div class="field span4">
            <label for="hospital-street-address-{{record_order}}">Street Address</label>
            <input class="span4" type="text" name="address_line1" value="{{address_line1}}" id="hospital-street-address-{{record_order}}">
            <br>
            <span class="error-message" data-for="hospital-street-address-{{record_order}}">Please enter a street address</span>
        </div>
    </div>

    <div class="row">
        <div class="field span4">
            <label for="hospital-city-{{record_order}}">City</label>
            <input type="text" class="span4" name="city" value="{{city}}" id="hospital-city-{{record_order}}">
            <br>
            <span class="error-message" data-for="hospital-city-{{record_order}}">Please enter a city</span>
        </div>
        <div class="field span3">
            <label class="span3" for="hospital-state-{{record_order}}">State / Province</label>
            <select class="span3 state_province" name="state_province" id="hospital-state-{{record_order}}">
                <option value="">&mdash;</option>
                <%= options_for_select(@us_states.map {|item| [item[:name], item[:value]] }) %>
            </select>
            <input class="span1 state_province" type="text" name="state_province" value="{{state_province}}" id="hospital-state-{{record_order}}">
            <span class="error-message" data-for="hospital-state-{{record_order}}">Please enter a valid state</span>
        </div>
        <div class="field span2">
            <label class="span2" for="hospital-postal-code-{{record_order}}">Postal Code</label>
            <input class="span2" type="text" name="postal_code" value="{{postal_code}}" id="hospital-postal-code-{{record_order}}">
            <br>
            <span class="error-message" data-for="hospital-postal-code-{{record_order}}">Please enter a valid postal code</span>
        </div>
    </div>
    <div class="row">
        <div class="field span4 x-required">
            <label class="span4" for="hospital-country-{{record_order}}">Country</label>
            <select class="span4 country" name="country" id="hospital-country-{{record_order}}">
                <option value="">&mdash;</option>
                <%= options_for_select(@countries.map {|item| [item[:name], item[:value]] }) %>
            </select>
            <span class="error-message" data-for="hospital-country-{{record_order}}"><br>Please select a country</span>
        </div>
    </div>
    <div class="row">
        <div class="field span2">
            <%= render :partial => 'components/privacy', :locals => { :field => 'hospital' } %>
        </div>
    </div>
</script>