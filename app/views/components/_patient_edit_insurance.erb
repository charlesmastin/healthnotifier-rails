<script id="insurance-item" type="text/html">
    <div class="row">
        <div class="field span4 required">
            <label for="insurance-company-{{record_order}}">Insurance Company</label>
            <input class="span4" type="text" name="organization_name" value="{{organization_name}}" id="insurance-company-{{record_order}}">
            <p class="error-message" data-for="insurance-company-{{record_order}}">Please enter a company name</p>
        </div>
        <div class="field span4">
            <label for="insurance-phone-{{record_order}}">Insurance Phone Number</label>
            <input class="span3" type="text" name="phone" value="{{phone}}" id="insurance-phone-{{record_order}}">
            <p class="error-message" data-for="insurance-phone-{{record_order}}">Please enter a valid phone number</p>
        </div>
        <%= render :partial => 'components/remove_row_button' %>
    </div>

    <div class="row">
        <div class="field span4">
            <label for="insurance-memberid-{{record_order}}">Member ID</label>
            <input class="span4" type="text" name="policy_code" value="{{policy_code}}" id="insurance-memberid-{{record_order}}">
            <p class="error-message" data-for="insurance-memberid-{{record_order}}">Please enter a member ID</p>
        </div>
        <div class="field span3">
            <label for="insurance-groupnum-{{record_order}}">Group #</label>
            <input class="span3" type="text" name="group_code" value="{{group_code}}" id="insurance-groupnum-{{record_order}}">
            <p class="error-message" data-for="insurance-groupnum-{{record_order}}">Please enter a group #</p>
        </div>
    </div>

    <div class="row">
        <div class="field span4">
            <label for="insurance-first-name-{{record_order}}">Policy Holder&rsquo;s First Name</label>
            <input class="span3" type="text" name="policyholder_first_name" value="{{policyholder_first_name}}" id="insurance-first-name-{{record_order}}">
            <p class="error-message" data-for="insurance-first-name-{{record_order}}">Please enter a first name</p>
        </div>
        <div class="field span4">
            <label for="insurance-last-name-{{record_order}}">Policy Holder&rsquo;s Last Name</label>
            <input class="span4" type="text" name="policyholder_last_name" value="{{policyholder_last_name}}" id="insurance-last-name-{{record_order}}">
            <p class="error-message" data-for="insurance-last-name-{{record_order}}">Please enter a last name</p>
        </div>
    </div>

    <div class="row">
        <div class="field span2">
            <%= render :partial => 'components/privacy', :locals => { :field => 'insurance' } %>
        </div>
    </div>
</script>